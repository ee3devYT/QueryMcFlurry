generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Guild {
  id      String @id @default(auto()) @map("_id") @db.ObjectId
  guildId String @unique
  prefix  String
}

model User {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  userId   String @unique
}

model Cooldown {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  type      String   // 'guild' or 'user'
  targetId  String   // guildId or userId
  command   String
  expiresAt DateTime

  @@unique([type, targetId, command])
}
